<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".recipepages">


        <TextView
            android:id="@+id/textView8.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Nutrition Menu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView8.5"
            android:layout_below="@+id/imageView8.1"
            android:layout_marginTop="14dp"
            android:text="Healthy Beginner" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignParentEnd="true"
            android:text="Healthy Weekend" />

        <ImageView
            android:id="@+id/imageView8.1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignStart="@+id/textView8.7"
            android:layout_below="@+id/textView8.1"
            android:layout_marginStart="30dp"
            android:nestedScrollingEnabled="false"
            android:onClick="clickphoto"
            android:src="@drawable/recipe1" />

        <ImageView
            android:id="@+id/imageView8.3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignStart="@+id/imageView8.7"
            android:layout_below="@+id/textView8.1"
            android:onClick="clickphoto3"
            android:src="@drawable/recipe8" />

        <ImageView
            android:id="@+id/imageView8.4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignStart="@+id/button4"
            android:layout_below="@+id/button2"
            android:layout_marginTop="72dp"
            android:onClick="clickphoto"
            android:src="@drawable/recipe4" />

        <ImageView
            android:id="@+id/imageView8.7"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignStart="@+id/button3"
            android:layout_alignTop="@+id/imageView8.4"
            android:layout_marginStart="19dp"
            android:onClick="clickphoto7"
            android:src="@drawable/recipe7" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belly Killer"
            android:layout_below="@+id/imageView8.4"
            android:layout_alignEnd="@+id/imageView8.1"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Economy Delight"
            android:layout_alignBaseline="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_alignStart="@+id/button3" />

    </RelativeLayout>
</LinearLayout>
